<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:rv="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:background="@color/lucency"
    android:orientation="vertical"
    android:padding="10dp"
    android:theme="@style/transcutestyle"
    >


        <RelativeLayout
            android:id="@+id/main_body_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:minHeight="1000dp"
            android:layout_centerInParent="true"
            >


            <ImageView
                android:id="@+id/exit_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/bg_login_green"
                android:background="@color/lucency"
                android:layout_above="@+id/sure_exit_layout"
                android:layout_centerInParent="true"
                />

            <ImageView
                android:id="@+id/cancel_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:src="@mipmap/icon_cancel"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp"
                />


            <!--<View-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="1dp"-->
                <!--android:background="@color/gray"-->
                <!--/>-->

            <LinearLayout
                android:id="@+id/sure_exit_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/white"
                android:layout_alignParentBottom="true"
                >

            <com.flyco.roundview.RoundTextView
                android:id="@+id/sure_exit_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/exit_img_sv"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:text="退出登录 "
                android:textColor="@color/white"
                android:textSize="@dimen/text_size20"
                rv:rv_backgroundColor="@color/colorPrimary"
                rv:rv_backgroundPressColor="@color/lucency"
                rv:rv_isRadiusHalfHeight="true"
                rv:rv_isRippleEnable="false"
                rv:rv_strokeColor="@color/lucency"
                rv:rv_strokePressColor="#6D8FB0"
                rv:rv_strokeWidth="1.5dp"
                rv:rv_textPressColor="#ffffff"
                android:layout_gravity="center"
                />
            </LinearLayout>
        </RelativeLayout>


</RelativeLayout>
